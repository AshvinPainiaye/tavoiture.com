{% extends "layout.html.twig" %}

{% block body %}

<style>
h5,h6{
  color: #495a61;
}
h5{
  font-weight: bold;
}
.prix {
  font-size:32px;
  color: #3d8c98;
}
.prix-j{
  font-size:20px;
}

.btn-details{
  background-color: #f0716c;
  border-color: #f0716c;
  color: #fff;
  border-radius:0;
  padding: 10px 25px 10px 25px;
}
</style>
<div class="container">


  <div class="row" style="margin:40px auto;">
    <div class="col-md-12 text-center">
      <a href="/vehicule/new" class="btn btn-default">Nouveau véhicule</a>
    </div>
  </div>

  <div class="row">

    {% for car in cars %}

    <div class="col-md-4" style="margin-bottom: 30px;">
      <img src="/images/{{ car['photo'] }}" class="img-responsive">
      <div style="padding:10px; border:1px solid #ddd; border-top:none;">
        <h5><i class="fa fa-car" style="margin-right:5px"></i> {{ car['brand'] }} - {{ car['model'] }}</h5>
        <h6><i class="fa fa-map-marker" style="margin-right:5px"></i> {{ car['city'] }}</h6>

        <div class="row">
          <div class="col-md-8">
            <span class="prix">{{ car['price'] }}€<span class="prix-j">/jour</span></span>
          </div>


          <div class="col-md-4">

          </div>

        </div>

      </div>
    </div>
    {% endfor %}




  </div>
</div>

{% endblock %}
