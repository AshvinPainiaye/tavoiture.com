{% extends "layout.html.twig" %}

{% block body %}

<form action="add" method="post" enctype="multipart/form-data">

  <select class="form-control" name="type" method="POST">
    <option disabled selected>Types</option>
    {% for type in types %}
    <option value="{{ type['id'] }}">{{ type['name'] }}</option>
    {% endfor %}
  </select>

  <select class="form-control" name="brand">
    <option disabled selected>Marques</option>
    {% for brand in brands %}
    <option value="{{ brand['id'] }}">{{ brand['name'] }}</option>
    {% endfor %}
  </select>

  <select class="form-control" name="modele">
    <option disabled selected>Modele</option>
    {% for model in models %}
    <option value="{{ model['id'] }}">{{ model['name'] }}</option>
    {% endfor %}
  </select>

  <select class="form-control" name="fuel">
    <option disabled selected>Carburant</option>
    {% for fuel in fuels %}
    <option value="{{ fuel['id'] }}">{{ fuel['name'] }}</option>
    {% endfor %}
  </select>

  <input type="text" name="horsePower" class="form-control" placeholder="puissance">
  <input type="text" name="engine" class="form-control" placeholder="moteur">
  <input type="text" name="nbPlace" class="form-control" placeholder="place">
  <input type="text" name="etat" class="form-control" placeholder="etat">
  <input type="text" name="color" class="form-control" placeholder="couleur">
  <input type="text" name="price" class="form-control" placeholder="prix">
  <input type="text" name="address" class="form-control" placeholder="adresse">
  <input type="text" name="city" class="form-control" placeholder="ville">
  <input type="text" name="zipCode" class="form-control" placeholder="code postal">
  <input type="text" name="dateAvailable" id="datepicker" class="form-control" placeholder="disponibilite">
  <div class="checkbox">
    <label><input id="visibility" type="checkbox" name="visibility">visibility</label>
  </div>

  <!--<input type="text" name="photo" class="form-control" placeholder="photo">-->

      <input type="file" name="fileToUpload" id="fileToUpload">


  <button type="submit" class="btn btn-default">Submit</button>
</form>


{% endblock %}

{% block javascript %}
<script type="text/javascript" src="/multidatespicker/jquery-ui.multidatespicker.js"></script>

<script>
$( function() {
  $( "#datepicker" ).multiDatesPicker({
    minDate: 0
  });
} );
</script>
{% endblock %}
